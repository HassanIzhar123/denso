<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"  android:animateLayoutChanges="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/edittextrel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/searchbtn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/searchbutton_background"
                android:padding="10dp"
                android:minWidth="40dp"
                android:src="@drawable/ic_search" />

            <RelativeLayout
                android:id="@+id/searchrel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/searchbtn"
                android:background="@drawable/edittext_bckground">

                  <EditText
                    android:id="@+id/search_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="43.8dp"
                    android:background="@null"
                    android:hint="Filter Value"
                    android:minWidth="200dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textCursorDrawable="@drawable/edittext_cursor_drawable" />

            </RelativeLayout>

            <ImageButton
                android:id="@+id/cancelbtn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/searchrel"
                android:background="@drawable/clear_button_background"
                android:padding="10dp"
                android:src="@drawable/ic_clear" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittextrel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:minWidth="300dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:minWidth="300dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clearbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/list"
                android:layout_marginTop="10dp"
                android:text="Clear"
                app:backgroundTint="#E91A3A" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/list"
                android:layout_marginStart="-40dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/list"
                android:background="?selectableItemBackgroundBorderless">

                <ImageButton
                    android:id="@+id/okbtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_btn_background"
                    android:padding="5dp"
                    android:src="@drawable/ic_check" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>