<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/upperbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-57dp"
        android:background="@drawable/top_br_bg" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="-10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.addisonelliott.segmentedbutton.SegmentedButtonGroup
                android:id="@+id/buttongroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:elevation="2dp"
                app:borderColor="#FF0025"
                app:borderWidth="1dp"
                app:position="0"
                app:radius="5dp">

                <com.addisonelliott.segmentedbutton.SegmentedButton
                    android:id="@+id/historybtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    app:selectedBackground="#FF0025"
                    app:selectedTextColor="#FFFFFF"
                    app:text="HISTORY"
                    app:textColor="#FF0025" />

                <com.addisonelliott.segmentedbutton.SegmentedButton
                    android:id="@+id/resetpasswordbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="10dp"
                    app:selectedBackground="#FF0025"
                    app:selectedTextColor="#FFFFFF"
                    app:text="RESET PASSWORD"
                    app:textColor="#FF0025" />

            </com.addisonelliott.segmentedbutton.SegmentedButtonGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/historyrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/buttongroup"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:overScrollMode="never"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/nodatarel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/nodataicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_no_data" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nodataicon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/helvetica"
                    android:text="No Data Found!"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/loadingrel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:indeterminateTint="#FF2247"
                    android:indeterminateTintMode="src_atop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/progress"
                    android:fontFamily="@font/helvetica"
                    android:text="Loading!"
                    android:textColor="#3f3f3f"
                    android:textSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/resetrel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/buttongroup"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/Resettext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/helvetica"
                    android:text="Reset Password"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/old_password_edittext_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Resettext"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/login_edittext_background">

                      <EditText
                    android:backgroundTint="@android:color/holo_red_light"
                    android:textCursorDrawable="@drawable/edittext_cursor_drawable"
                        android:id="@+id/old_password_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_toStartOf="@+id/btnrel"
                        android:background="@null"
                        android:elevation="10dp"
                        android:hint="Enter old password"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#000" />

                    <RelativeLayout
                        android:id="@+id/btnrel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp">

                        <ImageButton
                            android:id="@+id/showbtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_show" />

                        <ImageButton
                            android:id="@+id/hidebtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_hide"
                            android:visibility="gone" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/new_password_edittext_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/old_password_edittext_rel"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/login_edittext_background">

                      <EditText
                    android:backgroundTint="@android:color/holo_red_light"
                    android:textCursorDrawable="@drawable/edittext_cursor_drawable"
                        android:id="@+id/new_password_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_toStartOf="@+id/newbtnrel"
                        android:background="@null"
                        android:elevation="10dp"
                        android:hint="Enter new password"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#000" />

                    <RelativeLayout
                        android:id="@+id/newbtnrel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp">

                        <ImageButton
                            android:id="@+id/newshowbtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_show" />

                        <ImageButton
                            android:id="@+id/newhidebtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_hide"
                            android:visibility="gone" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/confirm_password_edittext_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/new_password_edittext_rel"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/login_edittext_background">

                      <EditText
                    android:backgroundTint="@android:color/holo_red_light"
                    android:textCursorDrawable="@drawable/edittext_cursor_drawable"
                        android:id="@+id/confirm_password_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_toStartOf="@+id/confirmbtnrel"
                        android:background="@null"
                        android:elevation="10dp"
                        android:hint="Confirm New password"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#000" />

                    <RelativeLayout
                        android:id="@+id/confirmbtnrel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp">

                        <ImageButton
                            android:id="@+id/confirmshowbtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_show" />

                        <ImageButton
                            android:id="@+id/confirmhidebtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_hide"
                            android:visibility="gone" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/updatepasswordbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/confirm_password_edittext_rel"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/round_btn_background">

                    <Button
                        android:id="@+id/updatebtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackgroundBorderless"
                        android:text="SUBMIT"
                        android:textAlignment="center" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>