                    android:layout_below="@+id/servicesbutton"
                    android:layout_marginTop="2dp"
                    android:text="@string/please_select_services"
                    android:textColor="#B71C1C"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/selectdaterel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pleaseselectservicetext"
                    android:layout_alignEnd="@+id/servicesbutton"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/selectdatetextview"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center_vertical"
                        android:hint="Date"
                        android:paddingEnd="25dp"
                        android:textColor="#797979"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/selectdateview"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/selectdatetextview"
                        android:layout_alignStart="@+id/selectdatetextview"
                        android:layout_alignEnd="@+id/selectdatetextview"
                        android:background="@drawable/underline_textview" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_below="@+id/selectdatetextview"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/selectdatetextview"
                        android:scaleType="centerInside"
                        android:src="@drawable/union"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/selecttimerel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selectdaterel"
                    android:layout_alignEnd="@+id/selectdaterel"
                    android:layout_marginTop="10dp">

                    <Spinner
                        android:id="@+id/selecttimeslotsspinner"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginStart="-16dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/spinner_background"
                        android:hint="Branch"
                        android:overlapAnchor="false"
                        android:paddingEnd="25dp"
                        android:textColor="#303030" />

                    <View
                        android:id="@+id/selecttimeslotview"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/selecttimeslotsspinner"
                        android:layout_alignStart="@+id/selecttimeslotsspinner"
                        android:layout_alignEnd="@+id/selecttimeslotsspinner"
                        android:background="@drawable/underline_textview" />

                    <TextView
                        android:id="@+id/selecttimeslottext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/selecttimeslotsspinner"
                        android:layout_marginTop="2dp"
                        android:text="Please Select Time Slot!"
                        android:textColor="#B71C1C"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/notimetextview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/spinner_background"
                        android:padding="15dp"
                        android:text="No TimeSlots Found!"
                        android:textColor="#8C8984"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignEnd="@+id/selecttimeslotsspinner"
                        android:layout_centerVertical="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/union" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selecttimerel"
                    android:layout_alignEnd="@+id/selecttimerel"
                    android:layout_marginTop="5dp"
                    android:background="#FFF2C9"
                    android:gravity="center"
                    android:maxWidth="320dp"
                    android:padding="10dp"
                    android:text="Please note that the date and time you requested may not be available. We will contact you to confirm your actual appointment details"
                    android:textColor="#BC9449"
                    android:visibility="gone" />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>
    <!--main layout will be visible later because of data loading unitl this laoding is shown-->
    <RelativeLayout
        android:id="@+id/loadingimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="#FF2247"
            android:indeterminateTintMode="src_atop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/progress"
            android:fontFamily="@font/helvetica"
            android:text="Loading!"
            android:textColor="#3f3f3f"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>