<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"  android:animateLayoutChanges="true"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/successimg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_success" />

        <TextView
            android:id="@+id/successheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/successimg"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/helvetica"
            android:text="Success"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/congratulationtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/successheader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/helvetica"
            android:text="Congratualtions!"
            android:textColor="#FE0025"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/successmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/congratulationtext"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/helvetica"
            android:text="Your password successfully has been changed!"
            android:textAlignment="center"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/okbtnrel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/successmessage"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_btn_background">

            <Button
                android:id="@+id/okbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:text="OK"
                android:textAlignment="center" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>