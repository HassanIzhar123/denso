<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"  android:animateLayoutChanges="true"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#EFF1F3">

<TextView
    android:id="@+id/upperbackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-57dp"
    android:background="@drawable/top_br_bg" />

<RelativeLayout
    android:id="@+id/givingservicesrel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="10dp"
    android:layout_marginTop="50dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/round_black_background">

    <TextView
        android:id="@+id/safetytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Safety Is Our First Priority."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/safetytext"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_regular"
        android:lineSpacingExtra="5dp"
        android:text="DENSO provides a wide range of premium vehicle repair and maintenance products ion the Kingdom of Saudi Arabia"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/servicingrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/givingservicesrel"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-10dp"
        android:overScrollMode="never" />

<RelativeLayout
    android:id="@+id/loadingrel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="#FF2247"
        android:indeterminateTintMode="src_atop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/progress"
        android:fontFamily="@font/helvetica"
        android:text="Loading!"
        android:textColor="#3f3f3f"
        android:textSize="20sp" />

</RelativeLayout>

</RelativeLayout>